<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycar.mapper.AccountMapper">

    <insert id="insert">
        INSERT INTO Account (`username`, `password`, `name`, `phone`, `roles`, ``store`) VALUES (#{username}, #{password}, #{name}, #{phone}, #{roles}, #{store})
    </insert>

    <select id="get" resultType="com.mycar.model.Account">
        SELECT * FROM Account WHERE username=#{username}
    </select>

    <select id="list" resultType="com.mycar.model.Account">
        SELECT * FROM Account WHERE status=0
    </select>

    <update id="update">
        UPDATE Account
        <set>
            <if test="password!=null">password=#{password},</if>
            <if test="name!=null">`name`=#{name},</if>
            <if test="phone!=null">`phone`=#{phone},</if>
            <if test="store!=null">`store`=#{store},</if>
            <if test="status!=null">`status`=#{status},</if>
        </set>
        <where>
            <if test="id!=null">id=#{id}</if>
            <if test="username!=null">AND username=#{username}</if>
        </where>
    </update>

    <update id="delete">
        UPDATE Account SET status=1 WHERE `username`=#{username}
    </update>

</mapper>